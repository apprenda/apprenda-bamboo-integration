<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/apprendaIcon.png</param>
        <param name="plugin-logo">images/apprendaLogo.png</param>
    </plugin-info>

    <taskType name="Apprenda Deployment Task" class="com.apprenda.clientservices.tasks.ApprendaDeployTask" key="ApprendaDeployTask">
        <description>Deploy a built archive to the Apprenda Platform</description>
        <category name="deployment"/>
        <configuration class="com.apprenda.clientservices.tasks.ApprendaDeployTaskConfigurator"/>
        <resource type="freemarker" name="create" location="templates/deploy.ftl"/>
        <resource type="freemarker" name="edit" location="templates/deploy.ftl"/>
        <resource type="freemarker" name="view" location="templates/deploy.ftl"/>
        <resource type="i18n" name="apprenda deployment task language" location="english"/>
    </taskType>
</atlassian-plugin>